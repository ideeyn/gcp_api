<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <RuntimeIdentifier>linux-x64</RuntimeIdentifier> <!-- Required for Cloud Run -->
    <PublishSingleFile>true</PublishSingleFile> <!-- Optional: Publish as a single file -->
    <SelfContained>false</SelfContained> <!-- Optional: Set to true if you want a self-contained deployment -->
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.OpenApi" Version="9.0.0" />
  </ItemGroup>

</Project>
